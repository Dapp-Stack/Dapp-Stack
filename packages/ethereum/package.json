    "email": "anthony@laibe.cc"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/solonproject/solon/issues"
  },
  "homepage": "https://github.com/solonproject/solon/packages/ethereum/README.md",
  "devDependencies": {
    "@solon/environment": "0.1.0",
    "@types/node": "^10.9.4",
    "@types/request": "^2.47.1",
    "@types/tar-fs": "^1.16.1",
    "shx": "^0.2.2",
    "tslint": "5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "3.0.1"
  },
